<%=form_for @song do |f| %>
    <%= f.label "Title:" %> 
    <%= f.text_field :title %>
    <%f.label "Released:" %>
    <%= f.number_field :released %> 
    <%= f.label "Release_year:" %> 
    <%= f.text_field :release_year %>
    <%= f.label "Artist:" %> 
    <%= f.text_field :artist %>
    <%= f.label "Genre:" %> 
    <%= f.text_field :genre %>

    <%= f.submit %> 
    <%end%>